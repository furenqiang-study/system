    <select id="countTimeByParams" resultMap="BaseResultVOMap">
        SELECT
            sum( sl.time ) AS time,
            DATE_FORMAT( sl.createTime, '%Y-%m-%d' ) AS createTime
        FROM
            sys_log AS sl
        GROUP BY
            DATE_FORMAT(sl.createTime,'%Y-%m-%d')
        ORDER BY sl.createTime DESC
	    LIMIT 0,7
    </select>

